@model List<Todolist.Models.TaskModel>

@{
    ViewData["Title"] = "Liste des tâches";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Name</td>
                <td>@task.Description</td>
                <td>@task.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id">Éditer</a>
                    <a asp-action="Delete" asp-route-id="@task.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Form", "Todolist")" class="btn btn-primary">Ajouter une tâche</a>
